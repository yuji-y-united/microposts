<% if logged_in? %>
  <div class="row">
      <div class="col-md-8">
        <h3>Followers</h3>
        <% if @user.follower_users.any? %>
          <ol class="followings-followers">
           
              <%= render 'followers' %>
           
          </ol>
        <% end %>
      </div>
  </div>
<% else %>
  <div class="center jumbotron">
      <h1>Welcome to the Microposts</h1>
      
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
                <br />
                <%= link_to pluralize(@user.following_users.count, "following"), followings_path(@user) %>, 
                <%= link_to pluralize(@user.follower_users.count, "follower"), followers_path(@user) %></span>
            </h1>
            <div class="col-md-8">
                <label>location:</label>
                <%= @user.area %>
                <br />
                <label>message:</label>
                <br />
                <%= @user.profmessage %>
                <% if current_user == @user %>
                    <br />
                    <%= link_to "edit" , edit_user_path(@user), class: "label label-info" %>
                <% end %>
            </div>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <%= paginate @microposts %>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= paginate @microposts %>
        <% end %>
    </div>
</div>